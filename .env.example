# AK Parti Gençlik Kolları Yönetim Sistemi
# Ortam Değişkenleri Şablon Dosyası

# ===========================================
# TEMEL UYGULAMA AYARLARI
# ===========================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ===========================================
# VERİTABANI AYARLARI
# ===========================================
# PostgreSQL bağlantı bilgileri
DATABASE_URL=postgresql://username:password@localhost:5432/akparti_genclik_db
PGHOST=localhost
PGPORT=5432
PGUSER=akparti_user
PGPASSWORD=güçlü_şifre_buraya
PGDATABASE=akparti_genclik_db

# ===========================================
# JWT VE GÜVENLİK AYARLARI
# ===========================================
# JWT için güçlü bir secret key
JWT_SECRET=süper_güçlü_jwt_secret_key_buraya_256_bit
SESSION_SECRET=güçlü_session_secret_key_buraya

# ===========================================
# GOOGLE CLOUD STORAGE AYARLARI
# ===========================================
# Google Cloud Service Account bilgileri
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_BUCKET_NAME=akparti-photos

# Object Storage için
DEFAULT_OBJECT_STORAGE_BUCKET_ID=repl-default-bucket-id
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/google-service-account.json
PRIVATE_OBJECT_DIR=/akparti-photos/.private
PUBLIC_OBJECT_SEARCH_PATHS=/akparti-photos/public,/akparti-photos/assets

# ===========================================
# E-POSTA AYARLARI
# ===========================================
# SMTP ayarları (fotoğraf gönderimi için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@akpartigenclik.org.tr
SMTP_PASS=app_specific_password
EMAIL_FROM=noreply@akpartigenclik.org.tr

# ===========================================
# PYTHON YÜZ TANIMA SERVİSİ
# ===========================================
# Python face matching service URL
PYTHON_FACE_SERVICE_URL=http://localhost:8000
FACE_RECOGNITION_API_KEY=güçlü_api_key_buraya

# ===========================================
# DOSYA YÜKLEME AYARLARI
# ===========================================
# Maksimum dosya boyutu (bytes) - 10MB
MAX_FILE_SIZE=10485760
UPLOAD_TEMP_DIR=/tmp/akparti-uploads
STATIC_FILES_DIR=/var/www/akparti-genclik/uploads

# ===========================================
# SSL VE DOMAIN AYARLARI
# ===========================================
# SSL sertifikası için domain
DOMAIN=akpartigenclik.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# ===========================================
# LOGLAma AYARLARI
# ===========================================
LOG_LEVEL=info
LOG_DIR=/var/log/akparti-genclik
MAX_LOG_SIZE=100MB
MAX_LOG_FILES=10

# ===========================================
# MONİTÖRLEME VE PERFORMANS
# ===========================================
# Health check endpoint
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Rate limiting (istekleri sınırlama)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CORS VE GÜVENLİK
# ===========================================
# İzin verilen origin'ler
ALLOWED_ORIGINS=https://akpartigenclik.yourdomain.com,https://www.akpartigenclik.yourdomain.com
CORS_ENABLED=true

# Content Security Policy
CSP_ENABLED=true

# ===========================================
# BACKUP VE MAINTENANCE
# ===========================================
# Otomatik backup ayarları
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/akparti-genclik

# ===========================================
# REPLIT ÖZELLİKLERİ (VPS'te kullanılmayacak)
# ===========================================
# Bu değişkenler sadece Replit'te kullanılır
# REPL_ID=your-repl-id
# REPLIT_DOMAINS=your-repl-domain.replit.dev
# ISSUER_URL=https://replit.com/oidc